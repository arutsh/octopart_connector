<?xml version="1.0"?>
<odoo>
  <record id="products_history_action" model="ir.actions.act_window">
      <field name="name">Products History</field>
      <field name="res_model">products.template.history</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'search_default_available': True}</field>
  </record>

 <record id="products_history_view_tree" model="ir.ui.view">
    <field name="name">product.history.tree</field>
    <field name="model">products.template.history</field>
    <field name="arch" type="xml">
      <tree string="Products History">
        <field name="date"/>
        <field name="name"/>
        <field name="min_avg_price"/>
        <field name="min_est_factory_lead_time"/>
        <field name="max_avg_avail"/>
        <field name="max_total_avail"/>

      </tree>
    </field>
  </record>

 <record id="products_history_view_form" model="ir.ui.view">
    <field name="name">products.history.form</field>
    <field name="model">products.template.history</field>
    <field name="arch" type="xml">
      <form string="Products History">
        <sheet>
          <h1>
            <field name="name"/>
          </h1>
          <group>
            <field name="date"/>
            <field name="name"/>
            <field name="min_avg_price"/>
            <field name="min_est_factory_lead_time"/>
            <field name="max_avg_avail"/>
            <field name="max_total_avail"/>
          </group>
        </sheet>
      </form>
    </field>
   </record>

</odoo>
