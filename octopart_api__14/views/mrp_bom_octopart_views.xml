<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Bill of Materials -->
        <record id="action_report_mrp_bom_octopart" model="ir.actions.client">
            <field name="name">BoM Structure &amp; Cost from Octopart</field>
            <field name="tag">mrp_bom_report_octopart</field>
            <field name="context" eval="{'model': 'rep_bom_oct_str'}" />
        </record>
    </data>

    <record id="mrp_bom_octopart_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.octopart.form</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
          <xpath expr="//div[@name='button_box']" position="before">
            <div class="oe_button_box" name="button_box_octopart">
                <button name="%(action_report_mrp_bom_octopart)d" type="action"
                  class="oe_stat_button" icon="fa-bars" string="OCTOPART"/>
            </div>
          </xpath>
        </field>
    </record>
</odoo>
