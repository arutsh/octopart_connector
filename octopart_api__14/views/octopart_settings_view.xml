<?xml version="1.0"?>
<odoo>

  <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.octopart.api</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Octopart Api" string="Octopart Api" data-key="octopart_api">
                    <h2> Octopart Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="o_setting_left_pane">
                          <label for="client_url" string="Octopart Client URL"/>
                          <field name="client_url"/>
                          <label for="api_token" string="Octopart api token"/>
                          <field name="api_token"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>


  <record id="octopart_api_settings_action" model="ir.actions.act_window">
      <field name="name">Octopart Settings</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">res.config.settings</field>
      <field name="view_id" ref='res_config_settings_view_form'/>
      <field name="view_mode">form</field>
      <field name="target">inline</field>
      <field name="context">{'module': 'octopart_api'}</field>
  </record>
</odoo>
